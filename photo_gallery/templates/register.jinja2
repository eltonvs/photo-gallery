{% extends "layout.jinja2" %}

{% block content %}
<div class="content">
  <h1>Register</h1>
  <hr>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      {% if errors %}
        <div class="alert alert-danger" role="alert">
          <strong>Error!</strong> Invalid Register. {{ errors }}
        </div>
      {% elif not errors and user_form %}
        <div class="alert alert-success" role="alert">
          <strong>Success!</strong>
        </div>
      {% endif %}
      <form accept-charset="utf-8" action="{{ request.current_route_url() }}" method="POST">
        <div class="form-group">
          <label for="name-input">Name</label>
          <input type="text" class="form-control" id="name-input" name="name" placeholder="Enter your Name" value="{% if user_form and user_form.name %}{{ user_form.name }}{% endif %}" required>
        </div>
        <div class="form-group">
          <label for="email-input">Email address</label>
          <input type="email" class="form-control" id="email-input" name="email" placeholder="Enter your email address" value="{% if user_form and user_form.email %}{{ user_form.email }}{% endif %}" required>
        </div>
        <div class="form-group">
          <label for="password-input">Password</label>
          <input type="password" class="form-control" id="password-input" name="password" placeholder="Password" required>
        </div>
        <div class="form-group">
          <label for="confirm-password-input">Confirm Password</label>
          <input type="password" class="form-control" id="confirm-password-input" name="confirm_password" placeholder="Confirm Password" required>
        </div>
        <div class="form-group">
          <div class="custom-control custom-checkbox">
            <input id="checkbox-admin" type="checkbox" name="admin" class="custom-control-input">
            <label for="checkbox-admin" class="custom-control-label"> Admin</label>
          </div>
        </div>
        <button type="submit" name="form.submitted" class="btn btn-primary">Register</button>
      </form>
    </div>
  </div>
</div>
{% endblock content %}
