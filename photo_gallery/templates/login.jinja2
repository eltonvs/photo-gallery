{% extends "layout.jinja2" %}

{% block content %}
<div class="content">
  <h1>Log In</h1>
  <hr>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      {% if errors %}
        <div class="alert alert-danger" role="alert">
          <strong>Error!</strong> Invalid Login.
        </div>
      {% endif %}
      <form accept-charset="utf-8" action="{{ request.current_route_url() }}" method="POST">
      <div class="form-group">
        <label for="email-input">Email address</label>
        <input type="email" class="form-control" id="email-input" name="email" placeholder="Enter your email address" value="{% if email %}{{ email }}{% endif %}">
      </div>
      <div class="form-group">
        <label for="password-input">Password</label>
        <input type="password" class="form-control" id="password-input" name="password" placeholder="Password">
      </div>
      <button type="submit" name="form.submitted" class="btn btn-primary">Log In</button>
      </form>
    </div>
  </div>
</div>
{% endblock content %}
